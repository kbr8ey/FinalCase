# Environment variables example
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit actual secrets - use .env.example for templates only

# Flask Configuration
DEBUG=True                              # Set to False in production
PORT=8080                               # Container port
FLASK_ENV=development                   # development or production

# Database (for future MongoDB integration)
# DATABASE_URL=mongodb://localhost:27017/clothing_store

# API Keys (for future payment/shipping integration)
# STRIPE_API_KEY=your-stripe-key
# SHIPPING_API_KEY=your-shipping-key

# Security
# SECRET_KEY=your-secret-key-here      # Use strong random string in production
# CORS_ORIGINS=https://yourdomain.com  # Restrict CORS in production

# Logging
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR, CRITICAL

